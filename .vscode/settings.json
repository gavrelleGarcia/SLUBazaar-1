{
    // --- INTELLIJ BEHAVIOR FIXES ---
    "editor.suggestSelection": "first",             // Always highlight the top result (No arrow key needed)
    "editor.acceptSuggestionOnEnter": "on",         // Enter key accepts the suggestion
    "editor.quickSuggestions": {
        "other": "on",
        "comments": "off",
        "strings": "off"
    },
    "editor.tabCompletion": "on",                   // Tab key accepts suggestion

    // --- RE-ENABLING WHAT WAS HIDDEN ---
    "editor.suggest.showClasses": true,
    "editor.suggest.showMethods": true,
    "editor.suggest.showConstants": true,
    "editor.suggest.showConstructors": true,
    "editor.suggest.showFields": true,
    "editor.suggest.showVariables": true,
    
    // --- CLEANUP ---
    "editor.snippetSuggestions": "bottom",          // Put snippets at the bottom so they don't block real code
    "editor.wordBasedSuggestions": "off",           // Keep this off (Good choice, reduces noise)

    // --- YOUR EXISTING PHP SETTINGS ---
    "phpGetterSetter.redirect": true,
    "phpGetterSetter.short": true,
    "phpGettersSetters.generatePHPDoc": true,
    "phpGettersSetters.templatesDir": "",
    "intelephense.environment.phpVersion": "8.2.0"
}